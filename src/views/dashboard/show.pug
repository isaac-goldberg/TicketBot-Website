doctype
html(lang='en')
    head
        include ../includes/header.pug

        link(rel='stylesheet', href='/css/sidebar.css')

        script(src='/js/sidebar.js', defer)
        script(src='/js/guild.js', defer)
    body
        include ../includes/sidebar.pug
    
        #sidebarExtension
            header.pt-4
                .large-icon.bg-secondary.round
                    if guild.icon
                        img.round(src=utils.getGuildIcon(guild.id, guild.icon, 128), alt=guild.name)
                    else
                        p.sidebarExtensionAbbr.text-center #{utils.getNameAcronym(guild.name)}
            h4#guildOverviewName.pt-2.text-center.word-break(style={color: 'lightgray'}) #{guild.name}
            .tabs.navbar-nav
                .category.float-left Overview
                a#overview.moduleNavigation(href=`/servers/${guild.id}/overview`) #[i.fas.fa-star] Overview
                .category.float-left Modules
    
    include ../includes/navbar.pug

    include modules/overview
